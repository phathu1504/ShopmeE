        <input type="hidden" name="sortField" th:value="${sortField}">
        <input type="hidden" name="sortDir" th:value="${sortDir}">
        Filter:&nbsp;
        <input type="search" name="keyword" class="form-control" th:value="${keyword}" required style="flex: 1; width: 50px;" />
