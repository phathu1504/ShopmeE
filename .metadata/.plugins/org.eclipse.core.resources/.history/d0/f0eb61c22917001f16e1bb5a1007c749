    <!-- User Table -->
    <div>
      <table class="table table-bordered table-striped table-hover table-responsive-xl text-center">
        <thead class="table-dark">
          <tr>
            <th th:replace="User/fragments :: column_Link('id', 'User ID')"></th>
            <th>Photos</th>
            <th th:replace="User/fragments :: column_Link('email', 'E-mail')"></th>
            <th th:replace="User/fragments :: column_Link('firstName', 'First Name')"></th>
